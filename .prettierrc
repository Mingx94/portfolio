{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"endOfLine": "lf",
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": ["*.svelte"],
			"options": {
				"bracketSameLine": false
			}
		},
		{
			"files": ["README.md", "packages/*/README.md", "**/package.json"],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		},
		{
			"files": ["sites/svelte-5-preview/src/routes/docs/content/**/*.md"],
			"options": {
				"printWidth": 60
			}
		}
	]
}
